<h1><%= @title %></h1>

<%= form_for :post, url: posts_path do |f| %>
    <p>
        <%= f.label 'Note Category' %><br />
        <%= f.text_field :category, required: true %><br />
    </p>

    <p>
        <%= f.label 'Item' %><br />
        <%= f.text_area :item, required: true %><br />
    </p>

    <p>
        <%= f.submit %>
    </p>
    
<% end %>